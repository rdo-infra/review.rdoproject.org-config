parseable: true
quiet: false
skip_list:
  - missing-import  # referenced files must exist
  - risky-file-permissions  # File permissions unset or incorrect
  - role-name  # Role name ... does not match ``^+$`` pattern
  # TODO(ssbarnea): address these temporary exclusions:
  - indentation
  - truthy
  - braces
  - empty-lines
  - line-length
  - package-latest
verbosity: 1
exclude_paths:
    - zuul
    - zuul.d
    # remove in followup:
    - playbooks/opstools
